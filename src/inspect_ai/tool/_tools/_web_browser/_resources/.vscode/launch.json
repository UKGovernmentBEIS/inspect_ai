{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Debug Web Server",
      "program": "${workspaceFolder}/web_server.py"
    },
    {
      "type": "debugpy",
      "request": "launch",
