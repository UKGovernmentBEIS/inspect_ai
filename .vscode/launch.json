{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Module",
      "type": "debugpy",
      "request": "launch",
      "module": "inspect_ai",
      "args": "${input:argsPrompt}",
      "cwd": "${workspaceFolder}/src"
    },
    {
      "name": "Python Debugger: Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-k",
        "test_mcp_server_sandbox"
      ],
      // "args": ["-k", "test_mcp_server_sandbox", "--runapi"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Inspect",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/inspect",
      "console": "integratedTerminal",
      "args": [
        "eval",
        "../apex-triplet/apolloevals/apex/tasks/end_to_end_scheming/oversight_subversion/task.py@oversight_subversion",
        "--model",
        "google/gemini-3-pro-preview",
        "--limit",
        "1",
        "-M",
        "streaming=true"
      ],
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "id": "argsPrompt",
      "type": "promptString",
      "description": "Enter arguments for the module",
      "default": ""
    }
  ]
}